<Window x:Class="JTechPixelLED.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:drawingPanel="clr-namespace:JTechPixelLED.DrawingPanel"
        Title="J Tech Pixel LED"
        Height="600" Width="900"
        Icon="Branding/appicon.ico">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="About" Click="About_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Plugins" Name="PluginsMenu"/>
            <MenuItem Header="_Help">
                <MenuItem Header="License" Click="License_Click"/>
            </MenuItem>
        </Menu>
        <TabControl Name="PluginTabs" Margin="0,30,0,0">
            <TabItem Header="Pixel Drawing">
                <drawingPanel:PixelDrawingPanel />
            </TabItem>
        </TabControl>
    </Grid>
</Window>