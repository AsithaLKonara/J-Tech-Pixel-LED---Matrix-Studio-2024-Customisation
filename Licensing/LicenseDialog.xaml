<Window x:Class="JTechPixelLED.Licensing.LicenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="License Activation" Height="250" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Enter your license key and email to activate."/>
        <TextBox Name="LicenseKeyBox" Margin="0,10,0,0" PlaceholderText="License Key"/>
        <TextBox Name="EmailBox" Margin="0,10,0,0" PlaceholderText="Email"/>
        <Button Content="Activate" Width="100" Margin="0,20,0,0" HorizontalAlignment="Right" Click="Activate_Click"/>
        <TextBlock Name="StatusText" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>
</Window>