<UserControl x:Class="JTechPixelLED.Plugins.STM32Uploader.STM32UploaderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JTechPixelLED.Plugins.STM32Uploader"
             Width="300" Height="250">
    <Grid>
        <ComboBox x:Name="PortSelector" Margin="10" Width="200" />
        <Button Content="Upload .hex File" Click="UploadButton_Click" Margin="10,40,10,10" Width="200" />
        <Button Content="Detect STM32" Click="DetectICButton_Click" Margin="10,70,10,10" Width="200" />
        <Button Content="User Manual" Click="UserManual_Click" Margin="10,100,10,10" Width="200" />
        <Button Content="License" Click="License_Click" Margin="10,130,10,10" Width="200" />
        <Button Content="About" Click="About_Click" Margin="10,160,10,10" Width="200" />
    </Grid>
</UserControl>