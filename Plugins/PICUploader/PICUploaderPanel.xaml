<UserControl x:Class="JTechPixelLED.Plugins.PICUploader.PICUploaderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JTechPixelLED.Plugins.PICUploader"
             Width="300" Height="250">
    <Grid>
        <ComboBox x:Name="PortSelector" Margin="10" Width="200" />
        <ComboBox x:Name="ICSelector" Margin="10,30,10,10" Width="200">
            <ComboBoxItem Content="PIC12F508" />
            <ComboBoxItem Content="PIC12F509" />
            <ComboBoxItem Content="PIC16F84A" />
            <ComboBoxItem Content="PIC18F2520" />
        </ComboBox>
        <Button Content="Upload .hex File" Click="UploadButton_Click" Margin="10,60,10,10" Width="200" />
        <Button Content="Detect PIC" Click="DetectICButton_Click" Margin="10,90,10,10" Width="200" />
        <Button Content="User Manual" Click="UserManual_Click" Margin="10,120,10,10" Width="200" />
        <Button Content="License" Click="License_Click" Margin="10,150,10,10" Width="200" />
        <Button Content="About" Click="About_Click" Margin="10,180,10,10" Width="200" />
    </Grid>
</UserControl>